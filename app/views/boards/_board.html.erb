<li>
  <%= link_to "#{board.name}", board, class: "btn btn-default btn-lg btn-front" %>
  <% if current_user.board_role(board) == "owner" || current_user.board_role(board) == "manager" %>
    <%= link_to "delete", board, method: :delete, id: board.id,
                                     data: { confirm: "You sure?" },
                                     title: board.name %>
    <% if board.paid_tier == 0 %>
      <%= link_to "Enable ticketing", board_ticketed_path(board) %>
    <% end %>
  <% end %>
  <br>
  <%= board.attributes %>
</li>