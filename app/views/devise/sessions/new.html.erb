<section>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 text-center">
      <h2>Sign in</h2>

      <%- flash.each do |name, msg| -%>
                <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      <%- end -%>
      
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, :autofocus => true, class: "form-control text-center" %>
        </div>

        <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "form-control text-center" %></div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>

        <% if @reserve_code != "" %>

        <%= f.hidden_field :reserve_code, :value => @reserve_code %>

        <% end %>  

        <div><%= f.submit "Sign in", class: "btn btn-primary" %></div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</section>