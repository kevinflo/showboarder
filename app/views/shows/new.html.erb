<h1>Add a show</h1>
<br>
<%= simple_nested_form_for [@board, @show] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.label :ticketing_type %>
  <%= f.select :ticketing_type, options_for_select(%w[Free RSVP paid pwyw]) %>

  <%= f.label :price_adv %>
  <%= f.text_field :price_adv, :class => 'cost', :value => (number_with_precision(f.object.price_door, :precision => 2) || 0) %>

  <%= f.fields_for :acts do |ff| %>    
    <%= ff.input :musicbrainz_id, as: :hidden %>
    <%= ff.input :name %>
    <%= ff.input :email %>
    <%= ff.input :link_main %>
    <%= ff.input :link_youtube %>
    <%= ff.input :link_twitter %>
    <%= ff.input :link_facebook %>
    <%= ff.input :link_soundcloud %>
    <%= ff.input :link_bandcamp %>

    <%= ff.submit "Add band" %>
  <%= ff.link_to_remove "Remove this stage" %>

  <% end %>
  <p><%= f.link_to_add "Add an act", :acts %></p>


  <%= f.submit "Add show", class: "btn btn-large btn-primary" %>
<% end %>