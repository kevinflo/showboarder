<div class="row">
  <div class="col-xs-12">
    <div class="row">
      <div class="col-xs-3 vcenter">
        <h4 class="show-meta"><%= show.show_at.to_time.strftime('%b %e') %></h4>
        <% if show.show_at %>
          <h4 class="show-meta"><%= show.show_at.to_time.strftime('%l:%M %p') %></h4>
        <% end %>
        <% if show.min_age %>
          <h4 class="show-meta"><%= show.min_age %></h4>
        <% end %>
      </div><!--
      --><div class="col-sm-6 col-xs-5 text-center vcenter">
        <h3><% show.acts.each do |a| %>
          <%= link_to a.name.to_s, a %>
          <% if a != show.acts.last %>
            -
          <% end %>          
        <% end %></h3>
      </div><!--
      --><div class="col-sm-3 col-xs-4 vcenter text-right">

      <%= link_to "Buy Tickets #{number_to_currency(show.price_adv, unit:"$", :precision => 0)}", board_show_path(@board, show), class: "btn btn-default" %><!--
      --><br>
      <% if user_signed_in? && current_user.boarder?(show.board) && current_user.board_role(show.board) == "owner" %>
        <%= link_to "Delete show", [@board, show], method: :delete, id: show.id,
                                         data: { confirm: "Are you sure you would like to delete this show?  This cannot be undone." },
                                         title: show.id %>
        <br>
        <%= link_to "Edit show", edit_board_show_path(@board, show) %>
        <br>
        <%= link_to "Show Checkin", board_show_checkin_path(@board, show) %>
      <% end %>
      </div>
    </div>
    <hr>
  </div>
</div>