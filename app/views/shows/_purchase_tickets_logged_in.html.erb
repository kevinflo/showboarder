<%= javascript_include_tag :purchaseTicketsLoggedIn %>
<div class="textbox-wrap text-center">
  Logged in as <%= current_user.email %>.
  <br>
  Not <%= current_user.email %>? <%= link_to  "Sign Out", destroy_user_session_path, method: "delete" %>.
  <br>
</div>

<script src="https://checkout.stripe.com/v2/checkout.js"></script>

<form role="form">
  <div class="textbox-wrap">
    <label for="tip-sb">Ticket/s (Bands/Venue)</label>
    <div class="input-group">
      <span class="input-group-addon "><i class="fa fa-dollar"></i></span><input name="amount-product" id="amount-product" type="text" class="form-control bfh-number" data-min="<%= @amount.to_i %>" value="1">
    </div>
  </div>

  <div class="textbox-wrap">
    <label for="tip-sb">Tip</label>
    <div class="input-group">
      <span class="input-group-addon "><i class="fa fa-dollar"></i></span><input name="amount-sb" id="amount-sb" type="text" class="form-control bfh-number" data-min="0" value="1">
    </div>
  </div>

  <label for="slider-1">Input slider:</label>
  <input type="range" name="slider-1" id="slider-1" value="60" min="0" max="100">

  <div class="login-form-action clearfix">
    Total: <span id="amount-total"></span>
    <button id="stripeButton" class="btn btn-success pull-right green-btn">Purchase</button>
  </div>
</form>

<div class="row">
  <div id="payment-errors" class="alert" style="<%= sale.errors.any? ? '' : 'display: none;' %>">
    <% sale.errors.full_messages.each do |msg| %>
      <span><%= msg %></span>
    <% end %>
  </div>
</div>